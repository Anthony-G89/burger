<h1>Eat-Da-Burger!</h1>


<ul>
  {{#each burgers}}
    {{#unless devoured }}
    <h3>{{burger_name}}</h3>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured }}
    <h3>{{burger_name}}</h3>
    {{/if}}
  {{/each}}
</ul>


<form class="create-form">
    <div class="form-group">
        <label for="burgerType"> Eat a burger</label>
        <input type="text" name="name" id="userInput">
    </div>

    <button type="submit" class="addBurger">Burger added</button>

</form>